    <!-- Back to Top Button -->
    <button id="back-to-top" class="fixed bottom-8 right-8 w-12 h-12 bg-red-600 text-white rounded-full shadow-lg flex items-center justify-center hover:bg-red-700 transition z-50">
        <i class="fas fa-arrow-up"></i>
    </button>

    <script>
        // Loader
        window.addEventListener('load', () => {
            setTimeout(() => {
                document.getElementById('loader').classList.add('hidden');
            }, 800);
        });

        // Mobile Menu
        const mobileMenuBtn = document.getElementById('mobile-menu-btn');
        const mobileMenu = document.getElementById('mobile-menu');
        mobileMenuBtn.addEventListener('click', () => {
            mobileMenu.classList.toggle('hidden');
        });

        // Back to Top
        const backToTop = document.getElementById('back-to-top');
        window.addEventListener('scroll', () => {
            if (window.scrollY > 500) {
                backToTop.classList.add('visible');
            } else {
                backToTop.classList.remove('visible');
            }
        });
        backToTop.addEventListener('click', () => {
            window.scrollTo({ top: 0, behavior: 'smooth' });
        });

        // Accordion
        document.querySelectorAll('.accordion-btn').forEach(btn => {
            btn.addEventListener('click', () => {
                const accordionId = btn.getAttribute('data-accordion');
                const content = document.getElementById(`accordion-${accordionId}`);
                const icon = btn.querySelector('i');
                
                // Close all other accordions
                document.querySelectorAll('.accordion-content').forEach(ac => {
                    if (ac.id !== `accordion-${accordionId}`) {
                        ac.classList.remove('open');
                        ac.style.maxHeight = null;
                        ac.previousElementSibling.querySelector('i').style.transform = 'rotate(0deg)';
                    }
                });
                
                // Toggle current
                if (content.classList.contains('open')) {
                    content.classList.remove('open');
                    content.style.maxHeight = null;
                    icon.style.transform = 'rotate(0deg)';
                } else {
                    content.classList.add('open');
                    content.style.maxHeight = content.scrollHeight + 'px';
                    icon.style.transform = 'rotate(180deg)';
                }
            });
        });

        // Initialize first accordion
        document.addEventListener('DOMContentLoaded', () => {
            const firstAccordion = document.getElementById('accordion-1');
            if (firstAccordion) {
                firstAccordion.style.maxHeight = firstAccordion.scrollHeight + 'px';
            }
        });

        // Smooth scrolling for anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({ behavior: 'smooth', block: 'start' });
                    // Close mobile menu if open
                    mobileMenu.classList.add('hidden');
                }
            });
        });

        // Add active state to nav links on scroll
        const sections = document.querySelectorAll('section[id]');
        window.addEventListener('scroll', () => {
            let current = '';
            sections.forEach(section => {
                const sectionTop = section.offsetTop;
                if (scrollY >= sectionTop - 100) {
                    current = section.getAttribute('id');
                }
            });

            document.querySelectorAll('nav ul li a').forEach(link => {
                link.classList.remove('text-red-600');
                link.classList.add('text-gray-700');
                if (link.getAttribute('href') === `#${current}`) {
                    link.classList.add('text-red-600');
                    link.classList.remove('text-gray-700');
                }
            });
        });

        // Payment QR Code functionality
        const payNowBtn = document.getElementById('payNowBtn');
        
        payNowBtn.addEventListener('click', () => {
            // Validate required fields first
            const cardHolderName = document.getElementById('cardHolderName').value.trim();
            const emergencyContact = document.getElementById('emergencyContact').value.trim();
            
            if (!cardHolderName) {
                Swal.fire({
                    icon: 'error',
                    title: 'Missing Information',
                    text: 'Please enter the card holder name before proceeding.',
                    confirmButtonColor: '#dc2626'
                });
                return;
            }
            
            if (!emergencyContact) {
                Swal.fire({
                    icon: 'error',
                    title: 'Missing Information', 
                    text: 'Please enter the emergency contact number before proceeding.',
                    confirmButtonColor: '#dc2626'
                });
                return;
            }
            
            // Submit the form data
            const formData = new FormData(document.getElementById('cardCustomizationForm'));
            const data = Object.fromEntries(formData.entries());
            data.requestType = 'card_order';
            data.cardType = data.selectedCard;
            
            // Show loading
            Swal.fire({
                title: 'Processing Your Reservation...',
                text: 'Please wait while we process your card reservation.',
                allowOutsideClick: false,
                didOpen: () => {
                    Swal.showLoading();
                }
            });
            
            // Submit to PHP script
            fetch('submit-form.php', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify(data)
            })
            .then(response => response.json())
            .then(result => {
                if (result.success) {
                    Swal.fire({
                        icon: 'success',
                        title: 'Your Card is Reserved!',
                        text: 'We will contact you soon for payment and card delivery as the information is verified first to assure safety.',
                        confirmButtonColor: '#dc2626',
                        confirmButtonText: 'Great!'
                    }).then(() => {
                        document.getElementById('cardCustomizationForm').reset();
                        closeFormBtn.click();
                    });
                } else {
                    Swal.fire({
                        icon: 'error',
                        title: 'Reservation Failed',
                        text: result.message,
                        confirmButtonColor: '#dc2626'
                    });
                }
            })
            .catch(error => {
                console.error('Error:', error);
                Swal.fire({
                    icon: 'success',
                    title: 'Your Card is Reserved!',
                    text: 'We will contact you soon for payment and card delivery as the information is verified first to assure safety.',
                    confirmButtonColor: '#dc2626',
                    confirmButtonText: 'Great!'
                }).then(() => {
                    document.getElementById('cardCustomizationForm').reset();
                    closeFormBtn.click();
                });
            });
        });

        // Card Selection Functionality
        const cardItems = document.querySelectorAll('.card-item');
        const cardForm = document.getElementById('cardForm');
        const cardsGrid = document.getElementById('cardsGrid');
        const selectedCardInput = document.getElementById('selectedCard');
        const closeFormBtn = document.getElementById('closeForm');

        cardItems.forEach(card => {
            card.addEventListener('click', () => {
                const cardType = card.getAttribute('data-card');
                selectedCardInput.value = cardType;
                
                // Show form with animation
                cardForm.style.display = 'block';
                setTimeout(() => {
                    cardForm.classList.add('show');
                }, 50);
                
                // Rearrange cards - move clicked card to top-left, others shift down
                const clickedCard = card;
                const otherCards = Array.from(cardItems).filter(c => c !== clickedCard);
                
                // Clear grid and rearrange
                cardsGrid.innerHTML = '';
                
                // Add clicked card first (top-left)
                cardsGrid.appendChild(clickedCard);
                
                // Add other cards
                otherCards.forEach(otherCard => {
                    cardsGrid.appendChild(otherCard);
                });
                
                // Update grid layout for form display
                cardsGrid.classList.add('grid-cols-1');
                cardsGrid.classList.remove('grid-cols-2');
                
                // Scroll to form
                setTimeout(() => {
                    cardForm.scrollIntoView({ behavior: 'smooth', block: 'start' });
                }, 300);
            });
        });

        // Close form functionality
        closeFormBtn.addEventListener('click', () => {
            cardForm.classList.remove('show');
            
            setTimeout(() => {
                cardForm.style.display = 'none';
                
                // Reset grid layout
                cardsGrid.classList.remove('grid-cols-1');
                cardsGrid.classList.add('grid-cols-2');
                
                // Reset card order (Blossom, Charcoal, Red, Aqua)
                const originalOrder = ['blossom', 'charcoal', 'red', 'aqua'];
                cardsGrid.innerHTML = '';
                
                originalOrder.forEach(cardType => {
                    const card = document.querySelector(`[data-card="${cardType}"]`);
                    if (card) {
                        cardsGrid.appendChild(card);
                    }
                });
            }, 300);
        });

        // Form submission
        document.getElementById('requestForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            
            const formData = new FormData(this);
            const data = Object.fromEntries(formData.entries());
            
            // Show loading
            Swal.fire({
                title: 'Submitting Request...',
                text: 'Please wait while we process your request.',
                allowOutsideClick: false,
                didOpen: () => {
                    Swal.showLoading();
                }
            });
            
            try {
                const response = await fetch('submit-form.php', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(data)
                });
                
                const result = await response.json();
                
                if (result.success) {
                    // Success alert
                    Swal.fire({
                        icon: 'success',
                        title: 'Request Submitted Successfully!',
                        text: result.message,
                        confirmButtonColor: '#dc2626',
                        confirmButtonText: 'Great!'
                    }).then(() => {
                        // Reset form
                        document.getElementById('requestForm').reset();
                    });
                } else {
                    // Error alert
                    Swal.fire({
                        icon: 'error',
                        title: 'Submission Failed',
                        text: result.message,
                        confirmButtonColor: '#dc2626'
                    });
                }
            } catch (error) {
                console.error('Error:', error);
                Swal.fire({
                    icon: 'error',
                    title: 'Network Error',
                    text: 'Please check your internet connection and try again.',
                    confirmButtonColor: '#dc2626'
                });
            }
        });
    </script>
</body>
</html>
